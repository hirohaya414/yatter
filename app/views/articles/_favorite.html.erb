<% if article.favorited_by?(current_member) %>

　<%= link_to article_favorites_path(article), method: :delete, class: "no-underline", remote: true do %>
  　 <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= article.favorites.count %>
  <% end %>

<% else %>

  <%= link_to article_favorites_path(article), method: :post, class: "no-underline", remote: true do %>
	<i class="far fa-heart" aria-hidden="true"></i>
	<%= article.favorites.count %>
  <% end %>

<% end %>

<i class="fas fa-comment"></i>
<%= article.comments.count %>
