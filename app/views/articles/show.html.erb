<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>
<p>
  <strong>Category:</strong>
  <%= @article.category.name %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

<ul>
  <li>
	<i class="fa fa-comment"></i>
	<%= @article.comments.count %></a>
  </li>
</ul>

<h2><%= @article.comments.count %>件コメント</h2>

<ol>
  <% @article.comments.each do |comment| %>
    <li>
      <div>
        <%= comment.member.name %>
        <span><%= l comment.created_at %></span>
      </div>
        <div><%= comment.content %></div>
        <% if comment.member == current_member %>
          <div>
            <%= link_to "削除", article_comment_path(comment.article, comment), method: :delete, data: { confirm: '本当に削除しますか？' } %>
          </div>
        <% end %>
    </li>
  <% end %>
</ol>

<h3>コメント</h3>
<%= form_for [@article, @comment] do |f| %>
  <%= f.text_area :content, class: "form-control", placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
