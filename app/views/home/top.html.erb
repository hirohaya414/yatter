    <div class="category-visual ot">
      <%= link_to articles_path(category_id: 8), class: "no-underline", style: "color: black;" do %>
    	  <p><span>その他<span></p>
      <% end %>
    </div>
  </div>

   <div class="headline">
    <h1 class="text-center headline3">
  	  <em>Service</em>
    </h1>
  </div>
  <div class="service-visual-content">
  	<% if member_signed_in? %>
  	  <%= link_to new_article_path, class: "no-underline" do %>
  	    <div class="button">
          <span>記事を書く</span>
        </div>
      <% end %>
  	<% else %>
  	  <%= link_to new_member_registration_path, class: "no-underline" do %>
        <div class="button">
          <span>メンバー登録</span>
        </div>
      <% end %>
  	<% end %>

  </div>
</div>
