<div class="row justify-content-center">
<div class="col-8">
  <p class="member-content"><span>メンバー一覧(全<%= @members_all.count %>件)</span></p>

	<div class="main">
	  <div class="content">
	    <% @members.each do |member| %>
	      <div class="card box">
	      <%= link_to member, style: "color: black;" do %>
	        <div class="article-img">
	          <%= attachment_image_tag member, :profile_image, size: "100x100", format: 'jpeg', class: "rounded-circle", fallback: "no_image.jpg" %>
	        </div>
	        <div class="article-info">
	          <span class="article-name"><%= member.name %></span>
	          <span class="member-article">投稿数：<%= member.articles.count %></span>
	        </div>
	      <% end %>
	      </div>
	    <% end %>
	  </div>
	</div>

  <%= paginate @members %>

  <div class="text-center actions">
    <%= link_to '戻る', 'javascript:history.back()' %> |
    <%= link_to '記事を書く', new_article_path %>
  </div>
</div>
</div>
